/* pages/settings/settings.wxss */
page{
    height: 100%;
}

.content 
{
  background-color: #e8e8e8;
  height: 100%;
  text-align: center;
} 

.title_text{
margin-top: 5%;  
font-size: 40rpx;
}

.item {
  text-align: center;
  margin-bottom: 35rpx;
}

.item label {
  display: inline-block;
  text-align: right;
  font-size: 40rpx;
  line-height: 1.4rem;
  vertical-align: top;
  padding: 5rpx 0;
  color: #333;
}

.item input {
  border: 4rpx solid #ddd;
  display: inline-block;
  width: 400rpx;
  font-size: 30rpx;
  text-align: left;
  padding: 5rpx 10rpx;
  border-radius: 4rpx;
}
.defautBtn{
  margin-top: 20px;
  background-color: #d4237a;
  color: white;
  width: 60%;
}